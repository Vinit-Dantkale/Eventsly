<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="nef_label">
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/raleway_medium</item>
        <item name="android:textColor">@color/darkmagenta</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">left</item>
    </style>


    <style name="ed_label">
        <item name="android:textColor">@color/tigerorange</item>
        <item name="android:textSize">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/raleway_medium</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="nef_background">
        <item name="android:background">@color/fadedgrey</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="invites">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">35dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/raleway_bold</item>
    </style>

    <style name="tlstyle">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="tlrstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
